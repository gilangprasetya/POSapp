        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            $(document).ready(function () {
                // Fetch total purchases from the server
                $.ajax({
                    url: '/dashboard/totalPurchases',
                    method: 'GET',
                    success: function (data) {
                        const totalPurchases = data.totalPurchase || 0;

                        // Format total purchases as currency
                        const formattedTotalPurchases = formatCurrency(totalPurchases);

                        // Update the total purchases value on the page
                        $('#totalPurchases').text(formattedTotalPurchases);

                        // Fetch total sales from the server
                        $.ajax({
                            url: '/dashboard/totalSales',
                            method: 'GET',
                            success: function (data) {
                                const totalSales = data.totalSales || 0;
                                const earnings = totalSales - totalPurchases;

                                // Format total sales as currency
                                const formattedTotalSales = formatCurrency(totalSales);

                                // Format earnings as currency
                                const formattedEarnings = formatCurrency(earnings);

                                // Update the total sales value on the page
                                $('#totalSales').text(formattedTotalSales);

                                // Update the earnings value on the page
                                $('#earnings').text(formattedEarnings);
                            },
                            error: function (xhr, status, error) {
                                console.log('Error fetching total sales:', error);
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        console.log('Error fetching total purchases:', error);
                    }
                });

                function formatCurrency(value) {
                    const formatter = new Intl.NumberFormat('id-ID', {
                        style: 'currency',
                        currency: 'IDR',
                        currencyDisplay: 'symbol',
                    });
                    return formatter.format(value).replace('IDR', 'Rp. ')
                }
            })

        </script>

