<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Moment -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

    <script src="https://kit.fontawesome.com/6ea2cb925f.js" crossorigin="anonymous"></script>
    <title>POS - Purchases</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="/stylesheets/all.min.css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/stylesheets/sb-admin-2.min.css" />

</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../partials/sidebar.ejs') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- Topbar -->
                    <%- include('../partials/topbar.ejs') %>
                        <!-- End of Topbar -->
                        <div class="container-fluid">
                            <!-- Begin Page Content -->
                            <h1 class="h3 mb-2 text-gray-800">Purchases</h1>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <span class="m-0 font-weight-bold text-primary">Transaction</span>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-4">
                                            <label for="inputInvoice" class="form-label">Invoice</label>
                                            <input type="text" class="form-control" id="invoice" name="invoice"
                                                value="<%= data.invoice %>" disabled>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="inputTime" class="form-label">Time</label>
                                            <input type="text" class="form-control" id="time" name="time"
                                                value="<%= data.time %>" disabled>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="inputOperator" class="form-label">Operator</label>
                                            <input type="text" class="form-control" id="operator" name="operator"
                                                value="<%= user.name %>" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <form id="purchaseItemsForm" class="row g-3 ">
                                        <div class="col-md-4 mb-3">
                                            <label for="selectBarcode" class="form-label">Goods Barcode</label>
                                            <select name="barcode" class="form-control" id="barcode">
                                                <option disabled selected>select barcode</option>
                                                <% barcode.forEach(item=> { %>
                                                    <option value="<%= item.barcode %>">
                                                        <%= `${item.barcode} - ${item.name}` %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="inputBarcodeName" class="form-label">Goods Name</label>
                                            <input type="text" class="form-control" id="goodsname" name="goodsname"
                                                disabled>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="inputStock" class="form-label">Stock</label>
                                            <input type="text" class="form-control" id="stock" disabled>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="inputPurchasePrice" class="form-label">Purchases Price</label>
                                            <input type="text" class="form-control" id="purchaseprice"
                                                name="purchaseprice">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="inputQuantity" class="form-label">Qty</label>
                                            <input type="text" class="form-control" id="quantity" name="quantity">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="inputTotalPrice" class="form-label">Total Price</label>
                                            <input type="text" class="form-control" id="totalprice" name="totalprice">
                                        </div>
                                        <div class="col-md-12 mt-3">
                                            <button type="submit" class="btn btn-primary btn-md btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-solid fa-plus"></i>
                                                </span>
                                                <span class="text">Add</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped ">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Barcode</th>
                                                <th>Name</th>
                                                <th>Qty</th>
                                                <th>Price</th>
                                                <th>Total Price</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tablebody">
                                        </tbody>
                                    </table>
                                </div>
                                <div class="card-footer">
                                    <form action="" method="post">
                                        <div class="row mb-3">
                                            <label for="inputEmail3" class="col-sm-2 col-form-label">Total
                                                Summary</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" id="totalsum" name="totalsum">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputSupplier" class="col-sm-2 col-form-label">Supplier</label>
                                            <div class="col-sm-10">
                                                <select name="suppliername" class="form-control" id="suppliername">
                                                    <% supplier.forEach(item=> { %>
                                                        <option>
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success btn-md btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-solid fa-plus"></i>
                                            </span>
                                            <span class="text">Finish</span>
                                        </button>
                                        <a href="/purchases" class="btn btn-warning btn-md btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-solid fa-backward"></i>
                                            </span>
                                            <span class="text">Back</span>
                                        </a>
                                    </form>
                                </div>
                            </div>

                            <!-- /.container-fluid -->
                        </div>
                        <!-- End of Main Content -->
                </div>

                <!-- Footer -->
                <%- include('../partials/footer.ejs') %>
                    <!-- End of Footer -->
                    <!-- End of Content Wrapper -->
            </div>

            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <!-- Logout Modal-->
            <%- include('../partials/logoutModal.ejs')%>
                <script src="/javascripts/jquery.min.js"></script>
                <script>
                    let invoice = '<%= data.invoice %>'
                    $(document).ready(() => {
                        readTable();
                        $("#barcode").change((event) => {
                            const barcode = $(event.target).val();
                            $.get(`/purchases/goods/${barcode}`).done((data) => {
                                $('#goodsname').val(data.name);
                                $('#stock').val(data.stock);
                                $('#purchaseprice').val(data.purchaseprice);
                                $('#quantity').val(0);
                                $('#totalprice').val(0);
                            })
                        })
                        $("#quantity").keyup((event) => {
                            const quantity = $(event.target).val();
                            const purchaseprice = $("#purchaseprice").val()
                            $("#totalprice").val(purchaseprice * quantity)
                        });
                        $("#purchaseItemsForm").submit((event) => {
                            event.preventDefault()
                            const itemcode = $("#barcode").val()
                            const quantity = $("#quantity").val()
                            $.post('/purchases/additems', { invoice, itemcode, quantity }).done((data) => {
                                readTable()
                                $("#totalsum").val(data.totalsum)
                            })
                        })
                    });
                    const readTable = () => {
                        $.get(`/purchases/tables/${invoice}`).done((data) => {
                            let html = ''
                            data.forEach((item, index) => {
                                html += `
                                <tr>
                                    <td>${index + 1}</td>
                                    <td>${item.itemcode}</td>
                                    <td>${item.name}</td>
                                    <td>${item.quantity}</td>
                                    <td>${item.purchaseprice}</td>
                                    <td>${item.totalprice}</td>
                                    <td>
                                        <a href="#" class="btn btn-circle btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal${item.id}"> 
                                            <i class=" fas fa-solid fa-trash"></i>
                                        </a>
                                        <div class="modal fade" id="deleteModal${item.id}" tabindex="-1"
                                                    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Deleted
                                                                    Confirmation</h5>
                                                                <button class="close" type="button" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">×</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">Are you sure, you want delete it ? </div>
                                                            <div class="modal-footer">
                                                                <button class="btn btn-secondary" type="button"
                                                                    data-dismiss="modal">No</button>
                                                                <a class="btn btn-primary"
                                                                    href="/purchases/deleteitems/${item.id}">Yes</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                    </td>
                                </tr>
                            `
                            });
                            $('#tablebody').html(html);
                        })
                    };
                </script>

                <!-- Bootstrap core JavaScript-->
                <script src="/javascripts/jquery.min.js"></script>
                <script src="/javascripts/bootstrap.bundle.min.js"></script>

                <!-- Core plugin JavaScript-->
                <script src="/javascripts/jquery.easing.min.js"></script>

                <!-- Custom scripts for all pages-->
                <script src="/javascripts/sb-admin-2.min.js"></script>

                <!-- Page level plugins -->
                <script src="/javascripts/jquery.dataTables.min.js"></script>
                <script src="/javascripts/dataTables.bootstrap4.min.js"></script>
</body>

</html>